extends ../layouts/pages
block append head
  block title
    - var title='OSC-Color'; // Page title

block content
  include ../components/header.pug
  section.title
    .container
      .row
        .col
          h2.headerH1 COLOR

  <hr>

  //- Color Navigator
  section
    .container
      - var navColor = [{'key':'Surface'}, {'key':'Primary'}, {'key':'Secondary'}, {'key':'EtcColor'}, {'key':'Crediential'}]
        .row.navColorBox
          each item, index in navColor
            //- a( href = "colorpage.html#"+item.key class = "navColor " + item.key ) #{item.key}
            a( href = "colorpage.html#"+item.key class = "navColor " + item.key ) #{item.key}

  section
    .container
      .row
        .col-sm-12
          h3 Usage
          b Example for SCSS : 
          .example
            pre
              code.css  @import 'path/osc-style/style_variables/osc-color';
              code.css
              code.css  .body {
              code.css    background-color: $primary-600;
              code.css    color: $inProgress;
              code.css  }

  <hr id="Surface"/>

    //- Surface
    section.rowLayout
      .container
        .row
          .col-sm-12
            h3 Surface
            include ../variables.pug
              .row.surfaceRowHeight
                each item, index in surface
                  if index === 0
                    div( class = item.key + " mainHight titleColorLayout" )
                      input( type="text" value=item.key readonly class = "ISName" ).name
                      input( type="text" value=item.color readonly class = "ISCode" ).code
                  else
                    div( class = item.key )
                      input( type="text" value=item.key readonly class = "ISName" ).name
                      input( type="text" value=item.color readonly class = "ISCode" ).code
              .row.surfaceRowHeight
                each item, index in surfaceEp
                  div( class = 'titleColorLayout surface' + item.key )
                    div( class = "emLeft" + " " + "surface" + item.textKey1 )= item.text1
                    div( class = "emLeft" + " " + "surface" + item.textKey2 )= item.text2
                    div( class = "emLeft" + " " + "surface" + item.textKey3 )= item.text3

  <hr id="Primary"/>

  //- Primary
  section.rowLayout
    .container
      .row
        .col-sm-12
          h3 Primary
          include ../variables.pug
            .row.primaryRowHeight
              each item, index in primary
                if index === 0
                  div( class = item.key+" mainHight titleColorLayout" )
                    input( type="text" value=item.key readonly class = "ISName" ).name
                    input( type="text" value=item.color readonly class = "ISCode" ).code
                else
                  div( class = 'primary' + item.key  )
                    input( type="text" value=item.key readonly class = "ISName" ).name
                    input( type="text" value=item.color readonly class = "ISCode" ).code
            .row.primaryRowHeight
              each item, index in primaryEp
                if index === 0
                  div( class = 'titleColorLayout primary' + item.key )
                    div( class = "emLeft" + " " + "primary" + item.textKey1 )= item.text1
                    div( class = "emLeft" + " " + "primary" + item.textKey2 )= item.text2
                    div( class = "emLeft" + " " + "primary" + item.textKey3 )= item.text3
                else if index === 1
                  div( class = 'textLower primary' + item.key )
                    div( class = "emLeft" + " " + "primary" + item.textKey4 )= item.text4
                    div( class = "emLeft" + " " + "primary" + item.textKey5 )= item.text5
                    div( class = "emLeft" + " " + "primary" + item.textKey6 )= item.text6
                else if index === 2
                  div( class = 'textLower primary' + item.key )
                    div( class = "emLeft" + " " + "primary" + item.textKey7 )= item.text7
                    div( class = "emLeft" + " " + "primary" + item.textKey8 )= item.text8
                    div( class = "emLeft" + " " + "primary" + item.textKey9 )= item.text9

  <hr id="Secondary"/>

  //- Secondary
  section.rowLayout
    .container
      .row
        .col-sm-12
          h3 Secondary
          include ../variables.pug
            .row.secondaryRowHeight
              each item, index in secondary
                if index === 0
                  div( class = item.key+" mainHight titleColorLayout" )
                    input( type="text" value=item.key readonly class = "ISNameLong" ).name
                    input( type="text" value=item.color readonly class = "ISCode" ).code
                else
                  div( class = 'secondary' + item.key  )
                    input( type="text" value=item.key readonly class = "ISName" ).name
                    input( type="text" value=item.color readonly class = "ISCode" ).code
            .row.secondaryRowHeight
              each item, index in secondaryEp
                if index === 0
                  div( class = 'titleColorLayout secondary' + item.key )
                    div( class = "emLeft" + " " + "secondary" + item.textKey1 )= item.text1
                    div( class = "emLeft" + " " + "secondary" + item.textKey2 )= item.text2
                    div( class = "emLeft" + " " + "secondary" + item.textKey3 )= item.text3
                else if index === 1
                  div( class = 'textLower secondary' + item.key )
                    div( class = "emLeft" + " " + "secondary" + item.textKey4 )= item.text4
                    div( class = "emLeft" + " " + "secondary" + item.textKey5 )= item.text5
                    div( class = "emLeft" + " " + "secondary" + item.textKey6 )= item.text6
                else if index === 2
                  div( class = 'textLower secondary' + item.key )
                    div( class = "emLeft" + " " + "secondary" + item.textKey7 )= item.text7
                    div( class = "emLeft" + " " + "secondary" + item.textKey8 )= item.text8
                    div( class = "emLeft" + " " + "secondary" + item.textKey9 )= item.text9

  <hr id="EtcColor"/>

  //- EtcColor
  section.rowLayout
    .container
      .row
        .col-sm-12
          h3 EtcColor
          include ../variables.pug
            .row.etcColorRowHeight
              each item, index in etcColor
                div( class = item.key )
                  input( type="text" value=item.key readonly class = "ISNameLong" ).name
                  input( type="text" value=item.color readonly class = "ISCode2" ).code

  <hr id="Crediential"/>

  //- Crediential
  section.rowLayout
    .container
      .row
        .col-sm-12
          h3 Crediential
          include ../variables.pug
            .row.credientialRowHeight
              each item, index in crediential
                div( class = item.key )
                  input( type="text" value=item.key readonly class = "ISNameLong" ).name
                  input( type="text" value=item.color readonly class = "ISCode" ).code

  include ../components/footer.pug